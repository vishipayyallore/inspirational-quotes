    // Custom file icon theme for better organization
    "workbench.iconTheme": "vscode-icons",
    // Problems panel configuration
    "problems.showCurrentInStatus": true,
    // Breadcrumbs for better navigation
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    // Auto-save for safer editing
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // Minimap settings for long vocabulary files
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    // Outline view for markdown structure
    "outline.showProperties": true,
    "outline.showModules": true,
    // GitHub Copilot Labs (if available)
    "github.copilot.advanced": {
        "length": 500,
        "temperature": 0.1,
        "top_p": 1,
        "inlineSuggestCount": 3
    }
}